<% if !signed_in? %>
<div id="navigation_green">
	<ul class="navi"><p>
		<li><strong><%= link_to 'Prestatievelden 3-6', prestatievelden_path %></a></li></strong>
		<li><strong><%= link_to '| Afkortingen', '/afkortingen' %> </a></li></strong>
		<li><strong><a href="#">| Tips </a></li></strong>
		<li><strong><a href="#">| Downloads | </a></li></strong>
	</ul>
</div>

<div id="content">
	<% @catname.each do |c| %>
		<h1 id="green"><%= c.category.name %></h1>
	<% end %>

	<% @shorts.each do |s| %>

		<h2 id="green"><%= s.name %></h2>
		<p><%= truncate s.content, length: 100 %> </p>
<% end %>
</div>

<% else %>

<div id="content">
	<% @catname.each do |c| %>
		<h1 id="green"><%= c.category.name %></h1>
	<% end %>

	<% @shorts.each do |s| %>

		<h2 id="green"><%= s.name %></h2>
		<p><%= truncate s.content, length: 100 %> </p>
		<p class="contro"><%= s.created_at.strftime("%d-%m-%Y %H:%M") %></p>		
		<p class="contro"><%= link_to "Aanpassen", edit_post_path(s) %></p>			
		<p class="contro"><%= link_to "verwijder", s, :confirm => "Weet je het zeker?", :method => :delete %></p>
		<hr />	
<% end %>
</div>
<% end %>
